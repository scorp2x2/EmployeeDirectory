@model Employee

@{
    ViewData["Title"] = "Delete";
}

<h4>Сотрудник</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                ФИО: @Model.FullName
            </div>
            <div class="form-group">
                Департамент: @Model.Department
            </div>
            <div class="form-group">
                Номер телефона: @Model.PhoneNumber
            </div>
            <div class="form-group">
                <input type="submit" value="Удалить сотрудника" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">К таблице</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }